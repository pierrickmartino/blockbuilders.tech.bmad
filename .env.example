# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/blockbuilders

# Redis
REDIS_URL=redis://redis:6379/0

# JWT
JWT_SECRET_KEY=dev-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_DAYS=7

# S3/MinIO (app config)
S3_ENDPOINT_URL=http://storage:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=blockbuilders
S3_REGION=us-east-1

# MinIO root (Docker)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# External APIs
CRYPTOCOMPARE_API_URL=https://min-api.cryptocompare.com/data/v2
CRYPTOCOMPARE_API_KEY=

# Backtest defaults
DEFAULT_INITIAL_BALANCE=10000.0
DEFAULT_FEE_RATE=0.001
DEFAULT_SLIPPAGE_RATE=0.0005
MAX_GAP_CANDLES=5

# Usage limits
DEFAULT_MAX_STRATEGIES=10
DEFAULT_MAX_BACKTESTS_PER_DAY=50

# Data quality validation
DATA_QUALITY_LOOKBACK_DAYS=90
DATA_QUALITY_GAP_THRESHOLD=2.0
DATA_QUALITY_OUTLIER_THRESHOLD=0.25
DATA_QUALITY_VOLUME_THRESHOLD=95.0

# Scheduler
SCHEDULER_ENABLED=true
SCHEDULER_HOUR_UTC=2

# CORS
CORS_ORIGINS=http://localhost:3000

# Password Reset (Resend)
RESEND_API_KEY=
RESET_TOKEN_EXPIRE_HOURS=1
FRONTEND_URL=http://localhost:3000

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OAuth - GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
